{
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "lib": ["esnext"],
    "target": "es2018",
    "moduleResolution": "Node",
    "newLine": "CRLF",
    "outDir": "tsc-out",
    "baseUrl": "src/",
    "sourceMap": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    // TODO fix this
    "noImplicitReturns": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowUnusedLabels": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types/"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "typedocOptions": {
    "mode": "file",
    "out": "../overmind-docs/docs",
    "ignoreCompilerErrors": true,
    "excludeNotExported": true,
    "readme": "none"
  }
}
